                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <uz.mobiler.lesson75.utils.BlurLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:blk_blurRadius="12"
