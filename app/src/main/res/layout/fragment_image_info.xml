                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:blk_blurRadius="12"
                    app:blk_downscaleFactor="0.12"
                    app:blk_fps="60">

                    <LinearLayout
                        android:layout_width="match_parent"
